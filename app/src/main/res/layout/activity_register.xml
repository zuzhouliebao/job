<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity">

    <include layout="@layout/tool_bar" />
    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/user" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/widget_up_bg"
        android:drawableStart="@mipmap/ic_username"
        android:drawablePadding="10dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:hint="请输入用户名" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/widget_down_bg"
        android:drawableStart="@mipmap/ic_password"
        android:drawablePadding="10dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:inputType="textPassword"
        android:hint="请输入密码" />
    <EditText
        android:id="@+id/et_pwd_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/widget_down_bg"
        android:drawableStart="@mipmap/ic_password"
        android:drawablePadding="10dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:inputType="textPassword"
        android:hint="请再次输入密码" />

    <Button
        android:id="@+id/btn_register"
        android:text="注   册"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_bg_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>